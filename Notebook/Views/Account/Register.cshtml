@model Notebook.AuthApp.UserRegistration
@{
    ViewData["Title"] = "Регистрация";
}

<div>
    <div>
        <h1 class="text-center">Регистрация</h1>
        <form asp-action="Register" asp-antiforgery="true" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="UserName" class="form-control" placeholder="Имя пользователя" />
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Пароль" />
                </div>
            </div>

            <div class="col-xs-12">
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтверждение пароля" />
                </div>
            </div>

            <div class="wrap">
                <button type="submit">
                    Зарегистрироваться
                </button>
            </div>
        </form>
    </div>

</div>

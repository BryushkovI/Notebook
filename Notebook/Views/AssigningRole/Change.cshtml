@model Microsoft.AspNetCore.Mvc.Rendering.SelectListItem[]

<form method="post">
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Наименование роли</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Length; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model[i].Selected" type="checkbox" name="model[@i].Selected" />
                    </td>
                    <td>
                        <label>@Model[i].Value</label>
                        <input asp-for="@Model[i].Value" type="hidden" name="model[@i].Value" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Назначить"/>
</form>